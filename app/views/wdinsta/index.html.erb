<h1>Listing Posts</h1>

<%= link_to 'New post', new_post_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.author_name %></td>
      <td><%= post.photo_url %></td>
      <td><%= post.title %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
    </tr>
  <% end %>
</table>